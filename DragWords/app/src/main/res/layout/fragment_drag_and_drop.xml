<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewPagerBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/tendp"
    android:paddingLeft="@dimen/tendp"
    android:paddingRight="@dimen/fivedp"
    android:paddingTop="@dimen/tendp"
    tools:context="dlh.fpt.fragments.DragAndDropFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:background="@android:color/white">

        <GridView
            android:id="@+id/grvResult"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp">

        </GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@android:color/white"></LinearLayout>

</LinearLayout>
